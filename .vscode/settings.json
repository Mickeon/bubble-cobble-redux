{
    "typescript.disableAutomaticTypeAcquisition": true,
    "typescript.validate.enable": false,
    "json.schemas": [
        {
            "fileMatch": [
                "/recipe_schema/*.json"
            ],
            "url": "./.vscode/recipe.json"
        },
        {
            "fileMatch": [
                "/gui_particle_spawners/**/*.json"
            ],
            "url": "./.vscode/schemas/gui_particle_spawners.json"
        },
        {
            "fileMatch": [
                "/recipe_schema/*.json"
            ],
            "url": "./.vscode/recipe.json"
        }
    ],
    "files.trimTrailingWhitespace": true,
    "files.exclude": {
        ".cache": true,
        ".mixin.out": true,
        ".probe": true,
        "build": true,
        "cache": true,
        "cobble*": true,
        "configureddefaults": true,
        "coremods": true,
        "downloads": true,
        "dynamic*": true,
        "emojiful": true,
        "immersive_paintings_cache": true,
        "local/kubejs/cache": true,
        "local/kubejs/event_groups": true,
        "local/kubejs/local*": true,
        "logs/*.gz": true,
        "moddata": true,
        "mods": true,
        "schematics": true,
        "screenshots": true,
        "server-resource-packs": true,
        "showdown": true,
        "texturepacks": true,
        "xaero": true,
        "Xaero*": true
    },
    "mc-color.delimiters": [
        "`",
        "\""
    ],
    "search.useIgnoreFiles": false,
    "errorLens.excludeByMessage": [
        "Use of hardcoded text function. Consider using language keys instead."
    ],
    "editor.tokenColorCustomizations": {
        "[Default Dark Modern]": {
            "textMateRules": [
                {
                    "scope": "comment.block.documentation.js",
                    "settings": {
                        "foreground": "#FFFFFF23"
                    }
                },
                {
                    "scope": "storage.type.class.jsdoc",
                    "settings": {
                        "foreground": "#e9e9f123"
                    }
                },
                {
                    "scope": "entity.name.type.instance.jsdoc",
                    "settings": {
                        "foreground": "#ffffff40"
                    }
                },
                {
                    "scope": "variable.other.jsdoc",
                    "settings": {
                        "foreground": "#FFFFFF23"
                    }
                }
            ]
        }
    },
    "[yaml]": {
        "files.trimTrailingWhitespace": false
    },
    "typescript.surveys.enabled": false
}